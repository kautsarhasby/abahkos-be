generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



  model User {
    id Int @id @default(autoincrement())
    email String @unique
    name String
    gender Gender
    password String
    room Room? @relation(fields: [roomId], references: [id])
    roomId Int? @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
  }

  model Room {
    id Int @id @default(autoincrement())
    roomUuid String @unique @default(uuid())
    roomNumber Int @unique
    floor Int
    type RoomType
    status Status
    facilities String[]
    price Int
    user User?
    description String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

  }

enum RoomType {
  regular
  large
}



enum Status {
  booked
  occupied
  available
}




enum Gender {
  pria
  wanita
}

